<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_customer_dtails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gstmadeeasy.Activity.ViewCustomerDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/OrganizationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization Name"
                android:textColor="#123"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/view_OwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Owner Name"
            android:textColor="#123"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/view_ContactNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:textColor="#123"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/view_EmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Id"
            android:textColor="#123"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/view_GstCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gst Category"
                android:textColor="#123"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/view_GstNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gst Number"
            android:textColor="#123"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/view_Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Status"
                android:textColor="#123"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/view_ClientCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Client Code"
            android:textColor="#123"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/view_State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:textColor="#123"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            />


        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/view_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:textColor="#123"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/view_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textColor="#123"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/view_FullAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Address"
                android:textColor="#123"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                />


        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <!--<ImageView-->
                <!--android:id="@+id/view_SignatureImage"-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="150dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:background="@drawable/style_1"/>-->
        </LinearLayout>

        <Button
            android:id="@+id/view_Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#19191a"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_1"
            />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
