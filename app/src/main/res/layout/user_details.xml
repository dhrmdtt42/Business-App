<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gstmadeeasy.Activity.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:translationZ="3dp"
        android:foregroundGravity="center">



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/OrganizationName_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Business"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:paddingLeft="1dp"
                        />
                    <TextView
                        android:id="@+id/OwnerName_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact Person"
                        android:textSize="18dp"
                        android:paddingLeft="1dp"
                        />

                    <TextView
                        android:id="@+id/EmailID_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Id"
                        android:textSize="18dp"
                        android:paddingLeft="1dp"
                        />

                    <TextView
                        android:id="@+id/ContactNo_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="mobile Number"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:paddingLeft="1dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="18dp"
                            android:layout_weight="1"
                            android:paddingLeft="1dp"
                            android:visibility="invisible"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="bottom"
                            android:padding="1dp">


                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="25dp"
                                android:layout_height="20dp"
                                android:src="@drawable/edit"
                                android:layout_marginRight="15dp"/>

                            <!--<ImageView-->
                                <!--android:id="@+id/img2"-->
                                <!--android:layout_width="25dp"-->
                                <!--android:layout_height="20dp"-->
                                <!--android:src="@drawable/delete"-->
                                <!--android:layout_marginRight="5dp"/>-->
                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="25dp"
                                android:layout_height="20dp"
                                android:src="@drawable/view"
                                android:layout_marginRight="5dp" />

                        </LinearLayout>
                    </LinearLayout>


                    <!--<ImageView-->
                        <!--android:id="@+id/signatureImageView"-->
                        <!--android:layout_width="@dimen/image_width"-->
                        <!--android:layout_height="@dimen/image_height"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:src="@android:color/transparent" />-->


                </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>
