<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gstmadeeasy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/distributonlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.BusinessActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.CreateBusiness_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.SignatureActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.ViewCustomerDetails"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>